doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css")
    script(src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js")
    link(rel="stylesheet" href="/css/styles.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")

    style.
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        margin: 0;
      }

      nav.navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: #343a40;
        padding: 10px 0;
      }

      .main-content {
        margin-top: 70px;
        flex-grow: 1;
        overflow-y: auto;
        padding-bottom: 100px; /* More space to prevent footer overlap */
        padding-top: 20px;
      }

      footer.footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #343a40;
        padding: 10px 0;
        color: #fff;
        text-align: center;
        z-index: 1000;
      }

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="/") TimeTracker

        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon

        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/profile") Profile
            li.nav-item
              a.nav-link(href="/worklogs") Worklogs
            li.nav-item
              a.nav-link.active(href="/reports") Reports
            li.nav-item
              a.nav-link(href="/logout") Logout

    .main-content.container.mt-5
      h1.text-center Work Reports

      form(action="/reports" method="GET")
        label(for="employee_id") Filter by Employee ID:
        input(type="text" name="employee_id" placeholder="Enter Employee ID")
        label(for="date_from") From:
        input(type="date" name="date_from")
        label(for="date_to") To:
        input(type="date" name="date_to")
        button(type="submit") Filter

      table.table.table-bordered.mt-4
        thead
          tr
            th Employee ID
            th Total Hours Worked
        tbody
          each report in reports
            tr
              td= report.employee_id
              td= report.total_hours

      hr

      h2 Export Work Logs
      a(href="/export-csv") Download CSV

      hr

      h2 Manage Users
      form(action="/reset-clock" method="POST")
        label(for="reset_employee_id") Reset Clock for Employee ID:
        input(type="text" name="reset_employee_id" required)
        button(type="submit") Reset Clock

      form(action="/add-user" method="POST")
        label(for="new_employee_id") Add New Employee ID:
        input(type="text" name="new_employee_id" required)
        button(type="submit") Add User

      form(action="/delete-user" method="POST")
        label(for="delete_employee_id") Delete Employee ID:
        input(type="text" name="delete_employee_id" required)
        button(type="submit") Delete User

    footer.footer.bg-dark.text-light.text-center.py-3
      p &copy; 2025 TimeTracker. All rights reserved.

    script.
      setTimeout(function(){
        var successMessage = document.getElementById("successMessage");
        if (successMessage){
            successMessage.style.display = "none";
        }
      }, 5000);
